<mvc:View controllerName="odsmfe.FormUI.controller.WorkOrderFormList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                
	xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" displayBlock="true">                                                                                                                                                
	<Page id="WLlist" title="{app>/selectedWorkOrder} Forms" class="sapUiStdPage" showNavButton="false">                                                                                                                                                          
		<headerContent>                                                                                                                                                                                                                                              
			<Button visible="{= !${device>/system/phone} &amp;&amp; !${app>/actionButtonsInfo/midColumn/fullScreen}}" icon="sap-icon://full-screen"                                                                                                                     
				type="Transparent" press="toggleFullScreen"/>                                                                                                                                                                                                              
			<Button visible="{= !${device>/system/phone} &amp;&amp; ${app>/actionButtonsInfo/midColumn/fullScreen}}" icon="sap-icon://exit-full-screen"                                                                                                                 
				type="Transparent" press="toggleFullScreen"/>                                                                                                                                                                                                              
			<Button icon="sap-icon://decline" type="Transparent" press="onCloseDetailPress"/>                                                                                                                                                                           
		</headerContent>                                                                                                                                                                                                                                             
		<ObjectHeader responsive="true" intro="{Description}" title="{WorkOrderNumber}">                                                                                                                                                                             
			<attributes>                                                                                                                                                                                                                                                
				<ObjectAttribute id="HeaderAttr" text="{OrderType}"/>                                                                                                                                                                                                      
				<!--<ObjectAttribute id="HeaderAttr" title="{i18n>submissions}" text="{data>/FormList/subcount}"/>-->                                                                                                                                                      
				<!--<ObjectAttribute id="HeaderAttr1" title="{i18n>drafts}" text="{data>/FormList/draftcount}"/>-->                                                                                                                                                        
			</attributes>                                                                                                                                                                                                                                               
		</ObjectHeader>                                                                                                                                                                                                                                              
		<Table id="tableWorkOrderFormList" width="auto"                                                                                                                                                                                                              
			items="{ path: 'FormSet', sorter: { path: 'FormID', descending: false, group: '.getFormID' }, groupHeaderFactory: '.getGroupHeader' }"                                                                                                                      
			itemPress="onViewDisplayForm" growing="true" growingThreshold="40" growingScrollToLoad="true" updateFinished="onUpdateFinished">                                                                                                                            
			<headerToolbar>                                                                                                                                                                                                                                             
				<Toolbar>                                                                                                                                                                                                                                                  
					<content>                                                                                                                                                                                                                                                 
						<Title text="{i18n>formListHeader}" level="H2"/>                                                                                                                                                                                                         
						<ToolbarSpacer/>                                                                                                                                                                                                                                         
						<Button tooltip="{i18n>addForm}" text="Submit New Form" icon="sap-icon://add" press="onCreateForm"/>                                                                                                                                                     
					</content>                                                                                                                                                                                                                                                
				</Toolbar>                                                                                                                                                                                                                                                 
			</headerToolbar>                                                                                                                                                                                                                                            
			<columns >                                                                                                                                                                                                                                                  
				<Column>                                                                                                                                                                                                                                                   
					<Text text="{i18n>formID}"/>                                                                                                                                                                                                                              
				</Column>                                                                                                                                                                                                                                                  
				<Column>                                                                                                                                                                                                                                                   
					<Text text="{i18n>Version}"/>                                                                                                                                                                                                                             
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="{i18n>createdBy}"/>                                                                                                                                                                                                                           
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="{i18n>createdAt}"/>                                                                                                                                                                                                                           
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="{i18n>ChangedBy}"/>                                                                                                                                                                                                                           
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="{i18n>ChangedAt}"/>                                                                                                                                                                                                                           
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="{i18n>isDraft}"/>                                                                                                                                                                                                                             
				</Column>                                                                                                                                                                                                                                                  
				<Column demandPopin="true" minScreenWidth="Tablet">                                                                                                                                                                                                        
					<Text text="Action"/>                                                                                                                                                                                                                                     
				</Column>                                                                                                                                                                                                                                                  
			</columns>                                                                                                                                                                                                                                                  
			<items>                                                                                                                                                                                                                                                     
				<ColumnListItem type="Navigation">                                                                                                                                                                                                                         
					<cells>                                                                                                                                                                                                                                                   
						<ObjectIdentifier title="{InstanceID}"/>                                                                                                                                                                                                                 
						<!--<ObjectIdentifier title="{FormID}" text="{InstanceID}"/>-->                                                                                                                                                                                          
						<ObjectStatus text="{Version}"/>                                                                                                                                                                                                                         
						<ObjectStatus text="{CreatedBy}"/>                                                                                                                                                                                                                       
						<Text text="{ path: 'CreatedOn' , type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'medium' } }"/>                                                                                                                                            
						<ObjectStatus text="{ModifiedBy}"/>                                                                                                                                                                                                                      
						<Text text="{ path: 'ModifiedOn' , type: 'sap.ui.model.type.DateTime', formatOptions: { style: 'medium' } }"/>                                                                                                                                           
						<ObjectStatus text="{ path: 'IsDraft' , formatter : '.formatter.IsDraft' }"/>                                                                                                                                                                            
						<Button id="FormEditBtn" icon="sap-icon://edit" press="onEditForm" enabled="{ path: 'IsDraft' , formatter : '.formatter.boolean' }"/>                                                                                                                    
					</cells>                                                                                                                                                                                                                                                  
				</ColumnListItem>                                                                                                                                                                                                                                          
			</items>                                                                                                                                                                                                                                                    
		</Table>                                                                                                                                                                                                                                                     
	</Page>                                                                                                                                                                                                                                                       
</mvc:View>                                                                                                                                                                                                                                                    