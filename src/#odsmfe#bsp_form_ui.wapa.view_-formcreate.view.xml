<mvc:View controllerName="odsmfe.FormUI.controller.FormCreate" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:fb="sap.ui.comp.filterbar"                                                                                                                      
	xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:control="odsmfe.FormUI.control" displayBlock="true">                                                                                                                                           
	<Page id="PageCreate" title=" Form {path: 'FormId'} for {app>/selectedWorkOrder} " backgroundDesign="Transparent">                                                                                                                                            
		<headerContent>                                                                                                                                                                                                                                              
			<Button visible="{= !${device>/system/phone} &amp;&amp; !${app>/actionButtonsInfo/midColumn/fullScreen}}" icon="sap-icon://full-screen"                                                                                                                     
				type="Transparent" press="toggleFullScreen"/>                                                                                                                                                                                                              
			<Button visible="{= !${device>/system/phone} &amp;&amp; ${app>/actionButtonsInfo/midColumn/fullScreen}}" icon="sap-icon://exit-full-screen"                                                                                                                 
				type="Transparent" press="toggleFullScreen"/>                                                                                                                                                                                                              
			<Button id="btn_saveasdraft" text="Save As Draft" type="Transparent" icon="sap-icon://save" press="onSaveAsDraftPress"/>                                                                                                                                    
			<Button id="btn_submit" text="Submit" type="Transparent" icon="sap-icon://accept" press="onSubmitPress"/>                                                                                                                                                   
			<Button id="btn_pdf" text="PDF" type="Transparent" icon="sap-icon://pdf-attachment" press="onPDFPress"/>                                                                                                                                                    
			<Button id="btn_print" text="Print" type="Transparent" icon="sap-icon://print" press="onPrint"/>                                                                                                                                                            
			<Button id="btn_expand" text="Expand" type="Transparent" icon="sap-icon://expand-all" press="onExpand"/>                                                                                                                                                    
			<Button id="btn_collapse" text="Collapse" type="Transparent" icon="sap-icon://collapse-all" press="onCollapse"/>                                                                                                                                            
			<Button type="Transparent" icon="sap-icon://decline" press="onCloseDetailPress"/>                                                                                                                                                                           
		</headerContent>                                                                                                                                                                                                                                             
		<content>                                                                                                                                                                                                                                                    
			<control:EnketoForm id="enketoForm" formID="{path:'FormId'}"                                                                                                                                                                                                
				formHTMLStr="{path:'FormHtml',formatter: '._hex_to_ascii'}"                                                                                                                                                                                                
				modelStr="{path:'FormModel',formatter: '._hex_to_ascii'}"                                                                                                                                                                                                  
				formRecord="{path:'ResponseData',formatter: '._hex_to_ascii'}"                                                                                                                                                                                             
				mode="{app>/selectedMode}" enketoFormSubmit="onEnketoFormSubmit"/>                                                                                                                                                                                         
		</content>                                                                                                                                                                                                                                                   
	</Page>                                                                                                                                                                                                                                                       
</mvc:View>                                                                                                                                                                                                                                                    